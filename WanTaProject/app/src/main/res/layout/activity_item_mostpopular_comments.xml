<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/white"
              android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="10dp"
            android:background="@color/head_bg_color"
            android:orientation="horizontal">
            <com.wanta.mobile.wantaproject.customview.CustomSimpleDraweeView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/pre_arrows"
                android:id="@+id/item_mostpopular_comments_back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:text="评论"
                android:textSize="20sp"
                android:textColor="@color/white"/>
        </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:padding="10dp"
        android:id="@+id/item_mostpopular_comment_recycleview">

    </android.support.v7.widget.RecyclerView>
    <com.wanta.mobile.wantaproject.customview.KeyboardListenRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/keyboardListener">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/item_mostpopular_comment_edit">
            <com.wanta.mobile.wantaproject.customview.MyImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center|left"
                android:layout_weight="1"
                android:hint="说点你的心得吧"
                android:background="@drawable/input_back_color"
                android:textSize="13sp"
                android:id="@+id/item_mostpopular_comment_edit_input"
                android:focusable="false"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/item_mostpopular_comment_publish"
            android:orientation="horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center|left"
                android:layout_weight="1"
                android:hint="准备发布点什么"
                android:background="@drawable/input_back_color"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:id="@+id/item_mostpopular_comment_publish_input"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="5dp"
                android:background="@drawable/send_msg_bg_color"
                android:text="发布"
                android:textColor="@color/black"
                android:id="@+id/item_mostpopular_comment_publish_ok"
                android:textSize="14sp"/>
        </LinearLayout>
    </com.wanta.mobile.wantaproject.customview.KeyboardListenRelativeLayout>
</LinearLayout>