<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/head_bg_color"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/chuandalinggan_back_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.wanta.mobile.wantaproject.customview.MyImageView
                android:id="@+id/chuandalinggan_back_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@mipmap/pre_arrows"
                android:paddingLeft="15dp"
                android:paddingRight="10dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="穿搭灵感"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.wanta.mobile.wantaproject.customview.MyImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/chuandalinggan_hand_icon"
            android:id="@+id/chuandalinggan_hand_image"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/head_bg_color"
            android:text="点击灵感图"/>
        <com.wanta.mobile.wantaproject.customview.MyImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:background="@mipmap/chuandaligngan_line_icon"
            android:id="@+id/chuandalinggan_line_image"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/head_bg_color"
            android:text="用我的单品搭出这个范儿"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/chuandalinggan_recycview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"></android.support.v7.widget.RecyclerView>
</LinearLayout>