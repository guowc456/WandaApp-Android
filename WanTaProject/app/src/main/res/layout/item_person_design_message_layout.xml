<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/head_bg_color"
          android:padding="10dp"
          android:layout_gravity="center"
          android:gravity="center"
          android:orientation="horizontal">
          <com.wanta.mobile.wantaproject.customview.MyImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@mipmap/pre_arrows"
              android:id="@+id/item_person_design_message_back"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
              android:layout_weight="1"
              android:gravity="center|left"
              android:textColor="@color/white"
              android:text="个人设置"
              android:textSize="14sp"
              android:id="@+id/item_person_design_message_title"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center|right"
              android:textColor="@color/white"
              android:text="完成"
              android:textSize="14sp"
              android:id="@+id/item_person_design_message_ok"/>
      </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="完善个人信息曝光率高2倍"
        android:id="@+id/item_person_design_message_waring"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="top"
        android:background="@color/white"
        android:textSize="14sp"
        android:id="@+id/item_person_design_message_input"/>
</LinearLayout>