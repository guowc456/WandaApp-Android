<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/head_bg_color"
        android:layout_gravity="center"
        android:padding="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:id="@+id/location_head_layout">
        <com.wanta.mobile.wantaproject.customview.MyImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginRight="10dp"
            android:src="@mipmap/pre_arrows"
            android:id="@+id/person_design_location_back"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:padding="5dp"
            android:background="#f2c2c2"
            android:layout_marginLeft="15dp"
            android:textSize="15sp"
            android:focusable="false"
            android:hint="北京"
            android:textColor="@color/white"
            android:id="@+id/person_design_location_search"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_marginLeft="10dp"
            android:gravity="center|right"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="完成"
            android:id="@+id/person_design_location_ok"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/new_person_design_location_recycle">

        </android.support.v7.widget.RecyclerView>
        <com.wanta.mobile.wantaproject.customview.QucklyLocationBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/location_quick_bar"/>
    </LinearLayout>


</LinearLayout>