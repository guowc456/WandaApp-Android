<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ca000000"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:id="@+id/other_author_input_pinapi_add_dialog_layout">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:background="@color/head_bg_color"
            android:text="添加品牌信息"
            android:textSize="15sp"/>
        <com.wanta.mobile.wantaproject.customview.KeyboardListenRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/other_author_input_pinapi_add_dialog_keyboardlistener">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:hint="请输入要添加的品牌的名字"
                android:textSize="14sp"
                android:background="@null"
                android:id="@+id/other_author_input_pinapi_add_dialog_edittext"/>
        </com.wanta.mobile.wantaproject.customview.KeyboardListenRelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="6dp"
            android:layout_height="1dp"
            android:background="@color/head_bg_color"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="0.3"
                android:orientation="vertical"
                android:id="@+id/other_author_input_pinapi_add_dialog_cancel_layout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/other_pinpai_add_dialog_bg_color_press"
                    android:layout_weight="0.3"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:padding="10dp"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:text="取消"
                    android:textSize="13sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="0.3"
                android:orientation="vertical"
                android:id="@+id/other_author_input_pinapi_add_dialog_ok_layout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/other_pinpai_add_dialog_bg_color_press"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:text="确定"
                    android:textSize="13sp"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>